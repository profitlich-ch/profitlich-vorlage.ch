{% import "macros/bild/_bild.twig" as macroBild %}
{% extends "_layout.twig" %}

{% block content %}

{{ variablen.hintergrundfarbe}}

<h1>{{ entry.title }}</h1>
<p>{{ entry.filipa2 }}</p>
<p>{{ entry.felix }}</p>
<p>{{ entry.farbe }}</p>

{% for bild in entry.projektbilder.all() %}
    <div class="projekt__bild">
        {{ macroBild.bild(variablen, bild, 'bild', 'Text der bildbeschreibung', '4:3') }}
    </div>
{% endfor %}

{% endblock %}